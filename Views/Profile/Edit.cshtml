@model ASPNETCore_DB.Models.UserProfile
@{
    Layout = "_UserLayout";
}

<h1>Edit Profile</h1>

<form asp-action="Update" enctype="multipart/form-data" method="post">
    @Html.AntiForgeryToken()

    @if (!ViewData.ModelState.IsValid)
    {
        <div class="alert alert-danger">
            @Html.ValidationSummary()
        </div>
    }

    <div>
        <label for="name">Name</label>
        <input type="text" asp-for="Name" id="name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div>
        <label for="email">Email</label>
        <input type="text" asp-for="Email" id="email" class="form-control" />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>

    <div>
        <label for="mobile">Mobile</label>
        <input type="text" asp-for="Mobile" id="mobile" class="form-control" />
        <span asp-validation-for="Mobile" class="text-danger"></span>
    </div>

    <div>
        <label for="gender">Gender</label>
        @{
            var genderOptions = new List<SelectListItem>
        {
        new SelectListItem { Value = "Male", Text = "Male" },
        new SelectListItem { Value = "Female", Text = "Female" }
        };
        }

        <select asp-for="Gender" asp-items="genderOptions" id="gender" class="form-control"></select>
        <span asp-validation-for="Gender" class="text-danger"></span>
    </div>

    <div>
        <label for="dob">Date of Birth</label>
        <input type="date" asp-for="DateOfBirth" id="dob" class="form-control" />
        <span asp-validation-for="DateOfBirth" class="text-danger"></span>
    </div>

    <div>
        <label for="profilePicture">Profile Picture</label>
        <input type="file" name="profilePicture" id="profilePicture" class="form-control" />
        <span asp-validation-for="ProfilePictureUrl" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary mt-3">Save</button>
</form>

<a asp-action="Index" class="btn btn-secondary mt-3">Back to Profile</a>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
