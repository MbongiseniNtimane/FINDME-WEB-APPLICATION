@model ASPNETCore_DB.Models.UserProfile
@{
    Layout = "_UserLayout";
}
<h1>Profile Page</h1>
<body style="background-color:orange;">
@if (Model != null)
{

    <div class="profile-details">
        <p><strong>Profile Picture:</strong></p>
        
    
        <div>
            <img src="@Model.ProfilePictureUrl ?? " /images/default-profile.png"" alt="Profile Picture" width="100" height="100" />
        </div>

        <p><strong>Name:</strong> @Model.Name</p>
        <p><strong>Email:</strong> @Model.Email</p>
        <p><strong>Mobile:</strong> @Model.Mobile</p>
        <p><strong>Gender:</strong> @Model.Gender</p>
        <p><strong>Date of Birth:</strong> @Model.DateOfBirth?.ToString("yyyy-MM-dd")</p>
    </div>

    <a asp-action="Edit" class="btn btn-primary mt-3">Edit Profile</a>
}
else
{
    <p>Profile information is not available.</p>
}
</body>