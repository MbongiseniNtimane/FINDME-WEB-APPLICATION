    <script>
        const imageContainer = document.getElementById('imageslides');

        // Create a copy of the first image to facilitate continuous sliding
        const firstImage = imageContainer.firstElementChild.cloneNode(true);
        imageContainer.appendChild(firstImage);

        let scrollAmount = 0;
        const imageWidth = 350; // Width of each image
        const totalImages = imageContainer.children.length; // Total number of images

        // Set initial scroll position to 0
        imageContainer.scrollLeft = 0;

        const slideTimer = setInterval(() => {
            // Scroll to the left by one image's width
            imageContainer.scrollBy({
                left: imageWidth,
                behavior: 'smooth'
            });
            scrollAmount += imageWidth;

            // If we've scrolled past the original last image, reset to start
            if (scrollAmount >= imageWidth * totalImages) {
                scrollAmount = 0; // Reset the scroll amount
                imageContainer.scrollLeft = 0; // Reset scroll position instantly to create a loop
            }
        }, 3000); // Slides every 3 seconds
    </script>

